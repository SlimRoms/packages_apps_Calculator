<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="DisplayEditTextStyle" parent="@android:style/Widget.Material.EditText">
        <item name="android:gravity">end|bottom|center</item>
        <item name="android:background">#00000000</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PadButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PadLayoutStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
</resources>
